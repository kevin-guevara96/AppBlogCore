@model BlogCore.Models.Slider

@{
    ViewData["Title"] = "Editar Slider";
}

<br />
<br />
<h3 class="text-center text-primary">Editar slider</h3>
<form method="POST" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="row px-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-7 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-3">
                    <label class="form-label">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-9">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del Artículo" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">
                    <label class="form-label">
                        <label asp-for="Estado"></label>
                    </label>
                </div>
                <div class="col-9">
                    <div class="form-check form-switch">
                        <input asp-for="Estado" class="form-check-input" type="checkbox" role="switch" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">
                    <label class="form-label">
                        <label asp-for="UrlImagen"></label>
                    </label>
                </div>
                <div class="col-9">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group row">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id"><i class="bi bi-circle-dotted"></i> Actualizar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control"><i class="bi bi-list-ol"></i> Volver a lista</a>
                </div>
            </div>
        </div>
        <div class="col-4 pt-3">
            <img src="@Model.UrlImagen" class="img-fluid" width="100" height="100" />
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    <script src='https://cdn.tiny.cloud/1/no-api-key/tinymce/4/tinymce.min.js'></script>
    <script>
        tinymce.init({
            selector: '#mytextarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}
