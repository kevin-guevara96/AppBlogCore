@model BlogCore.Models.Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<br />
<br />
<h3 class="text-center text-primary">Crear una nueva categoría</h3>
<form method="POST" asp-action="Create">
    <div class="row px-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-3">
                    <label class="form-label">
                        <label asp-for="Nombre"></label>
                    </label>
                </div>
                <div class="col-9">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre de la Categoría" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3">
                    <label class="form-label">
                        <label asp-for="Orden"></label>
                    </label>
                </div>
                <div class="col-9">
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese el orden del Visualización" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="form-group row">
                <div class="col-8">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>
    </div>
</form>
