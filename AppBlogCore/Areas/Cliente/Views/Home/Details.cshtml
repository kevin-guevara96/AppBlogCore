@model BlogCore.Models.Articulo
@{
    ViewData["Title"] = "Detalle Artículo";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-light m-lg-0 row contianer">
            <div class="col-12 col-md-6">
                <h4 class="text-primary">@Model.Nombre</h4>
            </div>
            <div class="col-12 col-md-6 text-md-right">
                <h4 class="text-primary">@Model.FechaCreacion</h4>
            </div>
            <div class="card-body">
                <div class="col-12">
                    <img src="@Model.UrlImagen" class="img-thumbnail mx-auto d-block" />
                    <p class="text-dark">@Html.Raw(Model.Descripcion)</p>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success btn-sm">Volver a lista</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>