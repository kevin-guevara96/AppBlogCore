@page
@using BlogCore.Utilidades
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h1 class="text-center text-primary">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 offset-3">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-info">Crear una nueva cuenta.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Nombre" class="form-control" a aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Nombre"></label>
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Direccion" class="form-control"  aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Direccion"></label>
                <span asp-validation-for="Input.Direccion" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Entidad" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Entidad"></label>
                <span asp-validation-for="Input.Entidad" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Pais" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Pais"></label>
                <span asp-validation-for="Input.Pais" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.Pais" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            @if (User.IsInRole(CNT.Admin))
            {
                <!--Selector de rolaes-->
                <div class="form-group row">
                    <div class="col-6">
                        <h5>Seleccionar Rol de Usuario</h5>
                    </div>
                    <div class="col-5">
                        <input type="radio" name="radUsuarioRole" value="@CNT.Admin" />@CNT.Admin
                        <input type="radio" name="radUsuarioRole" value="@CNT.Usuario" />@CNT.Usuario
                    </div>
                </div>
            }            
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registro</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
